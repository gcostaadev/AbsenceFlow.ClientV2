@page "/"
@inject AbsenceFlow.ClientV2.Services.ISolicitacaoApiService SolicitacaoService
@inject AbsenceFlow.ClientV2.Services.IColaboradorApiService ColaboradorService
@using AbsenceFlow.ClientV2.Enums
@using System.Linq 

<PageTitle>Início - AbsenceFlow</PageTitle>

<!-- Hero Section / Boas-Vindas -->
<div class="p-5 mb-4 bg-light rounded-3 shadow-sm">
    <div class="container-fluid py-5">
        <h1 class="display-3 fw-bold text-primary">Bem-vindo(a) ao AbsenceFlow</h1>
        <p class="col-md-8 fs-4 text-muted">
            Foco no que importa. Gerencie e organize todas as solicitações de ausência e férias da sua equipe de forma rápida e eficiente.
        </p>
        <hr class="my-4">
        <!-- Botão Call-to-Action -->
        <a href="/solicitacoes" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-rocket-takeoff me-2"></i> Começar a Gerenciar
        </a>
    </div>
</div>

<!-- Mensagem de Erro ou Carregamento -->
@if (isLoading)
{
    <div class="d-flex align-items-center mb-4 text-secondary">
        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
        <strong>Carregando dados do dashboard...</strong>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
    </div>
}

<!-- Seção de Ações Rápidas (Cards) -->
<h2 class="mb-4 text-secondary"><i class="bi bi-lightning-charge me-2"></i> Ações Rápidas</h2>

<div class="row g-4">

    <!-- Card 1: Gerenciar Solicitações Pendentes -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 border-warning border-3 shadow-lg">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 text-warning">Solicitações Pendentes</h5>
                    <i class="bi bi-bell-fill display-5 text-warning"></i>
                </div>
                <!-- DADOS REAIS: totalSolicitacoesPendentes -->
                <h1 class="display-4 fw-bold my-3">@totalSolicitacoesPendentes</h1>
                <p class="card-text text-muted">Aguardando sua aprovação ou rejeição.</p>
                <a href="/solicitacoes" class="btn btn-sm btn-outline-warning w-100">
                    <i class="bi bi-eye me-2"></i> Revisar Agora
                </a>
            </div>
        </div>
    </div>

    <!-- Card 2: Criar Nova Solicitação (MELHORIA VISUAL AQUI) -->
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 border-primary border-3 shadow-lg">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 text-primary">Nova Solicitação</h5>
                    <i class="bi bi-calendar-plus display-5 text-primary"></i>
                </div>
                <!-- NOVO CONTEÚDO VISUAL -->
                <div class="d-flex align-items-center justify-content-center my-3" style="height: 60px;">
                    <i class="bi bi-send display-4 text-muted opacity-50"></i>
                </div>
                <p class="card-text text-muted">Envie um novo pedido de ausência ou férias para a equipe.</p>
                <a href="/solicitacoes/novo" class="btn btn-sm btn-primary w-100">
                    <i class="bi bi-send me-2"></i> Criar Pedido
                </a>
            </div>
        </div>
    </div>

    <!-- Card 3: Gerenciar Colaboradores -->
    <div class="col-lg-4 col-md-12">
        <div class="card h-100 border-info border-3 shadow-lg">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 text-info">Total de Colaboradores</h5>
                    <i class="bi bi-people-fill display-5 text-info"></i>
                </div>
                <!-- DADOS REAIS: totalColaboradores -->
                <h1 class="display-4 fw-bold my-3">@totalColaboradores</h1>
                <p class="card-text text-muted">Visualize ou cadastre novos membros na plataforma.</p>
                <a href="/colaboradores/novo" class="btn btn-sm btn-outline-info w-100">
                    <i class="bi bi-person-add me-2"></i> Novo Cadastro
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private int totalSolicitacoesPendentes = 0;
    private int totalColaboradores = 0;
    private bool isLoading = true;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // 1. Carregar Solicitações e contar as Pendentes
            var solicitacoes = await SolicitacaoService.GetAllSolicitacoesAsync();
            // Filtra e conta apenas aquelas com status Pendente
            totalSolicitacoesPendentes = solicitacoes.Count(s => s.Status == SolicitacaoStatusEnum.Pendente);

            // 2. Carregar Colaboradores e contar o total
            var colaboradores = await ColaboradorService.GetAllColaboradoresAsync();
            totalColaboradores = colaboradores.Count();
        }
        catch (Exception ex)
        {
            // Mensagem de erro padrão para falhas de conexão ou API
            errorMessage = $"Erro ao carregar dados do Dashboard: {ex.Message}. Certifique-se de que a API está rodando corretamente.";

            // Define os contadores como 0 em caso de erro
            totalSolicitacoesPendentes = 0;
            totalColaboradores = 0;
        }
        finally
        {
            isLoading = false;
        }
    }
}
